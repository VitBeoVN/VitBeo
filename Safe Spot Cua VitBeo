local TweenService = game:GetService("TweenService")

local platform = Instance.new("Part")
platform.Name = "TPPlatform"
platform.Size = Vector3.new(100, 5, 100)
platform.Position = Vector3.new(10000, 500, 10000)
platform.Anchored = true
platform.BrickColor = BrickColor.new("Bright yellow")
platform.Parent = workspace

local player = game.Players.LocalPlayer
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TeleportGUI"
screenGui.ResetOnSpawn = false
screenGui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 220, 0, 130)
frame.Position = UDim2.new(0, 100, 0, 100)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true
frame.Parent = screenGui

local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 25)
titleBar.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
titleBar.BorderSizePixel = 0
titleBar.Parent = frame

local closeButton = Instance.new("TextButton")
closeButton.Size = UDim2.new(0, 25, 1, 0)
closeButton.Position = UDim2.new(1, -25, 0, 0)
closeButton.Text = "X"
closeButton.BackgroundColor3 = Color3.fromRGB(200, 60, 60)
closeButton.TextColor3 = Color3.new(1, 1, 1)
closeButton.Font = Enum.Font.SourceSansBold
closeButton.TextSize = 18
closeButton.Parent = titleBar

local minimizeButton = Instance.new("TextButton")
minimizeButton.Size = UDim2.new(0, 25, 1, 0)
minimizeButton.Position = UDim2.new(1, -55, 0, 0)
minimizeButton.Text = "-"
minimizeButton.BackgroundColor3 = Color3.fromRGB(100, 100, 100)
minimizeButton.TextColor3 = Color3.new(1, 1, 1)
minimizeButton.Font = Enum.Font.SourceSansBold
minimizeButton.TextSize = 18
minimizeButton.Parent = titleBar

local tpButton = Instance.new("TextButton")
tpButton.Size = UDim2.new(1, -20, 0, 40)
tpButton.Position = UDim2.new(0, 10, 0, 35)
tpButton.Text = "Safe spot"
tpButton.BackgroundColor3 = Color3.fromRGB(255, 200, 0)
tpButton.TextColor3 = Color3.new(0, 0, 0)
tpButton.Font = Enum.Font.SourceSansBold
tpButton.TextSize = 20
tpButton.Parent = frame

local backButton = Instance.new("TextButton")
backButton.Size = UDim2.new(1, -20, 0, 40)
backButton.Position = UDim2.new(0, 10, 0, 80)
backButton.Text = "Come Back"
backButton.BackgroundColor3 = Color3.fromRGB(200, 200, 200)
backButton.TextColor3 = Color3.new(0, 0, 0)
backButton.Font = Enum.Font.SourceSansBold
backButton.TextSize = 20
backButton.Parent = frame

local originalPosition = nil
local isMinimized = false

tpButton.MouseButton1Click:Connect(function()
	local character = player.Character or player.CharacterAdded:Wait()
	local hrp = character:WaitForChild("HumanoidRootPart")
	if not originalPosition then
		originalPosition = hrp.CFrame
	end
	hrp.CFrame = platform.CFrame + Vector3.new(0, 5, 0)
end)

backButton.MouseButton1Click:Connect(function()
	local character = player.Character or player.CharacterAdded:Wait()
	local hrp = character:WaitForChild("HumanoidRootPart")
	if originalPosition then
		hrp.CFrame = originalPosition
	end
end)

closeButton.MouseButton1Click:Connect(function()
	frame.Visible = false
end)

minimizeButton.MouseButton1Click:Connect(function()
	isMinimized = not isMinimized
	local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
	if isMinimized then
		local tween = TweenService:Create(frame, tweenInfo, {Size = UDim2.new(0, 220, 0, 25)})
		tpButton.Visible = false
		backButton.Visible = false
		tween:Play()
	else
		tpButton.Visible = true
		backButton.Visible = true
		local tween = TweenService:Create(frame, tweenInfo, {Size = UDim2.new(0, 220, 0, 130)})
		tween:Play()
	end
end)
